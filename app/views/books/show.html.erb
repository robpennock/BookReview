<h2><%= @book.title %></h2>
<h2><%= @book.author %></h2>
<h3>Category: <%= @book.category.name %></h3>
<h2><%= @book.description %></h2>

<!-- make sure user is signed in and is correct user before they can delete or edit books-->
<% if user_signed_in? %>
	<% if @book.user_id == current_user.id %>
		<%= link_to 'Edit', edit_book_path(@book)%>
		<%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: "Are You Sure" } %>
	<% end %>
<% end %>