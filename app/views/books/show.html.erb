
<div class="row">
	<div class="col-md-4">
		<% #book-show css in application.css.scss %>
		<%= image_tag @book.book_img.url(:book_show), class: "book-show"  %>
	</div>
	<div class="col-md-8">
		<h2><%= @book.title %></h2>
		<h2><%= @book.author %></h2>
		<h3>Category: <%= @book.category.name %></h3>
		<h2><%= @book.description %></h2>
	</div>
</div>
<div class="row">
	<div class="col-md-4">
	
		<!-- furture reviews and ratings -->

	</div>
</div>
	<!-- make sure user is signed in and is correct user before they can delete or edit books-->
	<% if user_signed_in? %>
		<% if @book.user_id == current_user.id %>
			<%= link_to 'Edit', edit_book_path(@book)%>
			<%= link_to 'Delete', book_path(@book), method: :delete, data: { confirm: "Are You Sure" } %>
		<% end %>
	<% end %>